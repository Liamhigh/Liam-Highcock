<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1E36"
    android:padding="24dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¤ Audio Recorder"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvCaseId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Case: CASE-XXXXXXXX"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Recording Visualization -->
    <LinearLayout
        android:id="@+id/recordingContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#1A2E4A"
        app:layout_constraintTop_toBottomOf="@id/tvCaseId"
        app:layout_constraintBottom_toTopOf="@id/btnRecord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvRecordingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Location Info -->
    <TextView
        android:id="@+id/tvLocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Location:"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/tvLocation"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capturing..."
        android:textSize="12sp"
        android:textColor="#AAAAAA"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/btnRecord"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Record Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRecord"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="ðŸŽ¤ Record"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@id/btnCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Cancel"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#666666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
