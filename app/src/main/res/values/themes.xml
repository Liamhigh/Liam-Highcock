<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.VerumOmnisForensic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="colorPrimaryVariant">@color/brand_navy</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/brand_blue_light</item>
        <item name="colorSecondaryVariant">@color/brand_blue</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/brand_navy</item>
        <item name="android:navigationBarColor">@color/brand_navy</item>
    </style>
</resources>
